.animation-box
	height 5189px
.ab-content
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 3768px
	height 100%
	background #252525
	margin-left 100%
	animation toRight .75s .08s ease-in-out forwards
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
@keyframes toRight
	from
		margin-left 100%
	to
		margin-left 0%
