.box
	height 7140px
.welcome
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 100
	span
		display block
		position absolute
		width 700px
		height 200px
		top 50%
		left 50%
		font-size 100px
		line-height 90px
		font-weight 400
		font-family treg,arial,sans-serif
		text-align center
		color #f6f6f6
		transform translate(-50%, -50%)
.welcome_img
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background url('../../imgs/index/4N-welcome.jpg') no-repeat center center
	z-index 99
.list_box
	position fixed
	height 366px
	width 1877px
	top 50%
	background-color #252525
	padding 37px
	transform translateY(-50%)
	z-index 100
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
	> div
		position relative
		width 413px
		height 366px
		float left
		color #f6f6f6
		&:not(:last-child)
			margin-right 75px
			&:after
				content ''
				display inline-block
				position absolute
				width 1px
				height 366px
				top 0
				right -38px
				background-color #f6f6f6
.cover
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 100%
	height 100%
	background-color #fbb034
	z-index 100
	h1
		position absolute
		top 50%
		left 50%
		width 1120px
		height 160px
		font-size 160px
		font-weight 400
		font-family treg,arial,sans-serif
		color #000
		margin 0
		transform translate(-50%, -50%)
		span
			font-family tbold,arial,sans-serif
