.modal-fixed
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-Index 999
.global-modal
	display block
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.8)
	z-index 999
.gm-content
	position fixed
	top 50%
	left 50%
	width 405px
	height auto
	text-align center
	color #f6f6f6
	background #fbb034 url('../../../imgs/global/4N-logo-white.svg') no-repeat center center
	transform translate(-50%, -50%)
	z-index 999
	h1
		margin 0
		font-size 48px
		font-weight 400
		font-family tlight,'arial narrow',sans-serif
		color #f6f6f6
		text-transform uppercase
	a
		color #f6f6f6
		cursor pointer
		text-decoration none
		&:hover
			text-decoration underline
.gm-close
	position absolute
	top 7px
	right 7px
	width 16px
	height 16px
	opacity .7
	cursor pointer
	background url('../../../imgs/global/4N-close.png') no-repeat center center
	z-index 1000
