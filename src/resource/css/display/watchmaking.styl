.logo
	width 52px
	height 20px
	position absolute
	a
		display inline-block
		width 20px
		height 20px
		&:first-child
			background url('../../imgs/global/tw-o.svg') no-repeat center center
			margin-right 12px
		&:last-child
			background url('../../imgs/global/fb-o.svg') no-repeat center center
.watchmaking
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 100%
	height 100%
	background-color #fbb034
	z-index 100
.w_box
	position absolute
	top 50%
	width 3000px
	height 546px
	transform translateY(-50%)
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
.w_title
	position absolute
	top 50%
	margin-top -252px
	margin-left 165px
	h2
		font-weight 400
		font-family tlight,'arial narrow',sans-serif
		font-size 40px
		line-height 43px
		width 315px
		margin 0 0 7px
		letter-spacing 3px
		color #f6f6f6
		text-transform uppercase
	p
		margin 0
		padding 0
		width 315px
		color #fff
		font-size 13px
		line-height 17px
		font-family "Times New Roman"
		hyphens auto
		word-wrap break-word
	.logo
		margin-top 14px
		a
			&:first-child
				background url('../../imgs/global/tw-k.svg') no-repeat center center
			&:last-child
				background url('../../imgs/global/fb-k.svg') no-repeat center center
.w_top_line
	height 273px
	margin 20px 0 0 495px
	float left
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
	div
		float left
.w_bot_line
	height 273px
	margin-left 155px
	float left
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
	div
		float left
