.db-specific
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	width 100%
	height 100%
	background-color #252525
	z-index 100
.db-s-box
	position absolute
	top 50%
	width 4400px
	height 546px
	transform translateY(-50%)
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
.db-s-title
	position absolute
	top 50%
	margin-top -252px
	margin-left 165px
	h2
		font-weight 400
		font-family tlight,'arial narrow',sans-serif
		font-size 40px
		line-height 43px
		width 315px
		margin 0 0 7px
		letter-spacing 3px
		color #f6f6f6
		text-transform uppercase
.db-s-top-line
	height 276px
	margin-left 420px
	float left
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
	div
		float left
.db-s-bot-line
	height 280px
	margin-left 67px
	float left
	&:after
		content ''
		display block
		clear both
		height 0
		visibility hidden
	div
		float left
